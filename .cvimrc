""""""""""""
" Settings "
""""""""""""
set nohud
set nosmoothscroll
set showtabindices

let scrollstep = 70
let searchlimit = 20
let mapleader = ","
let barposition = "bottom"

let hintcharacters = "qwertyuiopasdfghjklzxcvbnm"

let completionengines = ['duckduckgo', 'google', 'imdb', 'wikipedia']
let defaultengine = "duckduckgo"

""""""""""""""""
" Key Mappings "
""""""""""""""""
unmap <c-w>

map b :buffer<space>

map R reloadTabUncached

map s :open google<space>
map S :tabopen google<space>

map <C-d> scrollPageDown
map <C-u> scrollPageUp

map ; openCommandBar

map d closeTab

map l nextTab
map h previousTab

map K goForward
map J goBack

map L moveTabRight
map H moveTabLeft

map u lastClosedTab

map y yankDocumentUrl
map Y yankRootUrl

map v* openQuickMarkTabbed
map V* openQuickMark

map I ;tabnew!<space>

""""""""""""""""""
" Search Engines "
""""""""""""""""""
let searchengine duckduckgo = ["https://duckduckgo.com/", "https://duckduckgo.com/?q=%s&atb=v69-5_z"]
let searchengine google = ["https://www.google.com/", "https://www.google.com/?q=%s"]
let searchengine youtube = ["https://www.youtube.com/", "https://www.youtube.com/results?search_query=%s&page=subscriptions"]
let searchengine maps = ["https://www.google.ie/", "https://www.google.ie/maps/search/%s?hl=en&source=opensearch"]
let searchalias d = "duckduckgo"
let searchalias g = "google"
let searchalias y = "youtube"
let searchalias m = "maps"

