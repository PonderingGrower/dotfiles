" colorscheme
colorscheme zenburn

" for special key bindings
map <Space> <leader>

" numbers are far, far away from home row
set hintkeys=asdfghjkl;

" set shell to zsh
set shell=zsh

" usen gvim but focus the screen and tag on which gvim spawns
set editor='~/bin/ffvim <line> <column> <file>'

" complete from search engines, location bar, local files and bookmarks
set complete=slfb

" changed keyword for google to g
set defsearch=g

" incremental search
set incfind

" highlight search results
set hlfind

" jumping 5 times as far down
map -b j 10j
" jumping 5 times as far up
map -b k 10k


" use ctrl-v as intended
map -m i,c,t <C-v> <Pass>
map -m n,v,i,c,t <C-c> <Pass>
map -m n,v,i,c,t <C-a> <Pass>

" next tab
map l :tn<CR>
" previous taib
map h :tp<CR>

" move in history
map J :back<CR>
map K :forward<CR>

" move tab left and right
map H :tabmove -1<CR>
map L :tabmove +1<CR>

" source configuration
nmap <leader>v :source ~/.pentadactylrc<CR>

" some bookmarks for most opened web pages
nmap <leader>y :tabopen http://youtube.com/feed/subscriptions<CR>
nmap <leader>t :tabopen http://www.teamliquid.net<CR>
nmap <leader>r :tabopen http://reddit.com<CR>
nmap <leader>c :tabopen https://www.google.com/calendar/render<CR>
nmap <leader>m :tabopen http://www.mangareader.net<CR>
nmap <leader>p :tabopen https://tls.passthepopcorn.me/<CR>
nmap <leader>j :tabopen http://warszawa.jakdojade.pl<CR>
nmap <leader>w :tabopen http://www.meteo.pl/um/php/meteorogram_list.php?ntype=0u&fdate=2013060400&row=406&col=250&lang=pl&cname=Warszawa<CR>
nmap <leader>a :tabopen http://adam/<CR>
nmap <leader>v :tabopen http://melchior/vm<CR>

" Session manager
nmap <leader>s :tabopen about:sessionrestore<CR>

" start private browsing
nmap <leader>i :private winopen<CR>

" open selected links, replaces spaces between links for propper spearators
nmap <leader>o :!echo "<S-Insert>" | sed 's/ / | /g' | xclip <CR>:tabopen <S-Insert><CR>

" pop out youtube video
nmap <leader>f y:!echo "<S-Insert>" | sed 's/youtu.be\//www.youtube.com\/tv?vq=high#\/watch?v=/g' | xclip <CR>:tabopen <S-Insert><CR>

" download youtube video
nmap <leader>d y:!~/bin/urxvtb -hold -e ~/bin/ytdl "<S-Insert>"<CR><CR>

" faster expose
map e <c-s-e>

" fast access to history descending by date
map x :history! -sort -date 

" bigger more visible hints
highlight -a Hint font-size: 130% !important;
highlight -a Hint text-transform: uppercase;
