#!/bin/bash
TEMP=/tmp/config.tgz
BACKUPS="/mnt/melchior/http/public/ \
        /mnt/melchior/data/Dropbox/Public/ \
        /mnt/melchior/backup/caspair_config/ \
        /mnt/stuff/Important/"

cd ~/

echo Archiving dot files...

tar zcvf ${TEMP} \
--exclude="backup/*" \
--exclude="temp/*" \
--exclude="undo/*" \
--exclude=".git" \
.password-store \
.zshrc \
.Xdefaults \
.xsession \
.Xresources \
.xbindkeysrc \
.speedswapper \
.ncmpcpp/config \
.conkyrc \
.gvimrc \
.vimrc \
.vim \
.screenrc \
.tmux.conf \
.mplayer/ \
.pentadactylrc \
.pentadactyl/ \
.xinitrc \
.fonts.conf \
.fonts/ \
.gtkrc-2.0 \
.gtkrc-1.2-gnome2 \
.gtkrc.mine \
.gtkrc-2.0-gnome-color-chooser \
.config/gtk-3.0/settings.ini \
.config/ranger/ \
.config/awesome/ \
.awesome \
.ssh/config \
.gitconfig \
bin \
> /dev/null

echo Copying to destinations...

for DEST in ${BACKUPS} ; do
    echo " * ${DEST}"
    cp ${TEMP} ${DEST}
done

echo Done
