#!/bin/bash

FONT="xft:Inconsolata for Powerline:size=12:lang=pl:antialias=true:hinting=true"
#FONT="xft:inconsolata:size=14:lang=pl:antialias=false:hinting=false"
#FONT="xft:Terminus for Powerline:size=12:lang=pl:antialias=false:hinting=false"
#FONT="xft:Terminus:size=12:lang=pl:antialias=false:hinting=false"
#FONT="xft:terminus:size=12:lang=pl:antialias=false:hinting=false"

