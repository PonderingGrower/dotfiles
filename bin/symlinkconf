#!/usr/bin/env bash

# force overriding files
if [[ $1 == '-f' ]]; then
    FORCE=1
    echo 'FORCE'
fi

CONFIG_FILES='
bin .vimrc
.config/nvim .config/rofi
.zshrc .gitconfig
.speedswapper
.gnupg/*.conf
.mpv .ncmpcpp .tmux.conf    .agignore
.pentadactylrc .pentadactyl
.xbindkeysrc
.gtkrc-2.0 .awesome/config/rc.lua
.Xdefaults .xinitrc .Xresources
'

SCRIPT_DIR=$(dirname $(readlink -f "$0"))
cd "$SCRIPT_DIR"
GIT_ROOT=$(git rev-parse --show-toplevel)
cd -
echo $GIT_ROOT

for CONFIG_FILE in ${CONFIG_FILES}; do
    SOURCE="${GIT_ROOT}/${CONFIG_FILE}" 
    DEST="${HOME}/${CONFIG_FILE}"
    DEST_DIR=$(dirname "${DEST}")
    if [[ ! -d "${DEST_DIR}" ]]; then
        mkdir -p "${DEST_DIR}"
    fi
    if [[ ! ${FORCE} && -f "${DEST}" ]]; then
        echo "IS_FILE: ${DEST}"
    elif [[ ! ${FORCE} && -h "${DEST}" ]]; then
        echo "SYMLINK: ${DEST}"
    else
        echo "LINKING: ${SOURCE} -> ${DEST}"
        ln -sf "${SOURCE}" "${DEST}"
    fi
done
