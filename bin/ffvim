#!/bin/bash

FILE=$1
LINE=$2
COLUMN=$3

#echo "ffvim $FILE $LINE $COLUMN" >> /tmp/ffvim.log

# TODO this needs to block and not fork!
urxvtc +hold -title 'ffvim' \
        -e nvim \
        -f +'set titlestring=ffvim' \
        +"set ft=markdown" \
        +$LINE \
        +"sil! call cursor(0, $COLUMN)" "$FILE"
