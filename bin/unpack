#!/bin/sh

untgzf () {
    tar xvzf "$1" -C "$2"
}
unzipf () {
    unzip -o "$1" -d "$2"
}
unrarf () {
    unrar x -o- -ad "$1"
}
un7zf () {
    7z x -y -o"$2" "$1"
}
untbz2f () {
    tar xvjf "$1" -C "$2"
}
unlha () {
    lha ew="$2" "$1"
}

unpack() {
    FILE="$1"
	echo "Trying: $FILE"

	case "$FILE" in
		*.tar.gz) ext=".tar.gz"; command=untgzf
		;;
		*.tgz) ext=".tgz"; command=untgzf
		;;
		*.tar.bz2) ext=".tar.bz2"; command=untbz2f
		;;
		*.rar) ext=".rar"; command=unrarf
		;;
		*.zip) ext=".zip"; command=unzipf
		;;
		*.7z) ext=".7z"; command=un7zf
		;;
		*.lzh) ext=".lzh"; command=unlha
		;;
		*) echo "Unknown Format!"; continue
	esac
	
	A=`basename "$FILE" "$ext"`
    CMD="$command \"$FILE\" \"$A\""
	echo "Executing: $CMD"
	eval "$CMD"
}

for ARG in "$@"; do
    if [[ ! -d "$ARG" ]]; then
        unpack "$ARG"
    fi
done

sleep 10
