#!/bin/bash

# daemonize command and ingore all output
function run {
	command=$1
	shift
	# get the arguments
	args=$@
	
    printf "Checking: %-20s" "$command"
	if ! pgrep -f -d ", " $command; then
		echo "STARTING"
		nohup $command $args 2>/dev/null &
	fi
}

####### programs to run ########

cd /tmp

echo "### Autostarting programs:"

nitrogen --restore

run urxvtd -q -f -o
run gvim
run thunar --daemon
run xbindkeys
run nm-applet
run dwb https://codility-com.hipchat.com/chat
run icedove
run remmina > /dev/null 2>&1
run mpdstream.sh
run blueman-applet
run xfce4-power-manager

# start the usual terminal windows
if ! pgrep ncmpcpp &>/dev/null; then
	#urxvtc -name mmtail -e ~/bin/mmtail &
	# Start mpd client
	urxvtc -name ncmpcpp -e ncmpcpp &
fi
