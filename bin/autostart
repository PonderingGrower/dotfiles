#!/bin/bash

# daemonize command and ingore all output
function run {
	command=$1
	shift
	# get the arguments
	args=$@
	
    printf "Checking: %-15s" "$command"
	if ! pgrep -d ", " $command; then
		echo "STARTING"
		nohup $command $args 2>/dev/null &
	fi
}

export OOO_FORCE_DESKTOP="xfce4"
export DE="xfce"
export BROWSER="thunar"
export TERMINAL="urxvtc"
TERMINAL_S=~/bin/urxvts

####### programs to run ########

echo "### Autostarting programs:"

nitrogen --restore

run urxvtd -q -f -o
run gvim

# start the usual terminal windows
if ! pgrep ncmpcpp &>/dev/null; then
	$TERMINAL_S -name mmtail -e ~/bin/mmtail &
	# Start mpd client
	$TERMINAL_S -name ncmpcpp -e ncmpcpp &
fi

run thunar --daemon > /var/log/thunar.log 2>&1
run xbindkeys
run firefox
run thunderbird
run remmina > /dev/null 2>&1
run luakit http://melchior/rutorrent
run pidgin
run skype
