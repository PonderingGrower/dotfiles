#!/bin/bash

# daemonize command and ingore all output
function run {
	command=$1
	shift
	# get the arguments
	args=$@
	
    printf "Checking: %-15s" "$command"
	if ! pgrep -d ", " $command; then
		echo "STARTING"
		nohup $command $args 2>/dev/null &
	fi
}

####### programs to run ########

echo "### Autostarting programs:"

nitrogen --restore

run urxvtd -q -f -o
run gvim
run thunar --daemon
run xbindkeys
#run firefox
run thunderbird
run remmina > /dev/null 2>&1
run dwb
run pidgin
run skype
run keepassx

# start the usual terminal windows
if ! pgrep ncmpcpp &>/dev/null; then
	urxvts -name mmtail -e ~/bin/mmtail &
	# Start mpd client
	urxvtc -name ncmpcpp -e ncmpcpp &
fi

# for control with xbox pad
run xboxdrv --silent --daemon
run antimicro --profile ~/.config/antimicro/xpad2keyboard.xml -d --tray
