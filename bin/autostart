#!/bin/bash

# daemonize command and ingore all output
function run {
	command=$1
	shift
	# get the arguments
	args=$@
	
    printf "Checking: %-15s" "$command"
	if ! pgrep -d ", " $command; then
		echo "STARTING"
		nohup $command $args 2>/dev/null &
	fi
}

####### programs to run ########

echo "### Autostarting programs:"

nitrogen --restore

run urxvtd -q -f -o
run gvim

# start the usual terminal windows
if ! pgrep ncmpcpp &>/dev/null; then
	urxvtc -name mmtail -e ~/bin/mmtail &
	# Start mpd client
	urxvtc -name ncmpcpp -e ncmpcpp &
fi

run pcmanfm -d --no-desktop
run xbindkeys
run firefox
run thunderbird
run remmina > /dev/null 2>&1
run uzbl
run pidgin
run skype
run keepassx
