# DO NOT EDIT! This file will be overwritten by LXAppearance.
# Any customization should be done in ~/.gtkrc-2.0.mine instead.

gtk-theme-name="Murrina-Night-Owl-Darkest"
gtk-icon-theme-name="ALLWHITE"
gtk-font-name="Droid Sans Arabic 9"
gtk-cursor-theme-name="SmoothGNOME"
gtk-cursor-theme-size=0
gtk-can-change-accels=1
#gtk-toolbar-style=GTK_TOOLBAR_ICONS
gtk-toolbar-style=0
gtk-toolbar-icon-size=GTK_ICON_SIZE_LARGE_TOOLBAR
gtk-button-images=1
gtk-menu-images=1
gtk-enable-event-sounds=1
gtk-enable-input-feedback-sounds=1
gtk-xft-antialias=1
gtk-xft-hinting=1
gtk-xft-hintstyle="hintfull"
#gtk-xft-rgba="none"
gtk-xft-rgba = rgb #vrgb

style "user-font" {
	font_name = "Droid Sans Arabic 9"
}

widget_class "*" style "user-font"

style "thunar-icon-view-reduced-style"
{
	ThunarIconView::column-spacing = 0
    ThunarIconView::row-spacing = 0
}

class "ThunarIconView" style "thunar-icon-view-reduced-style"
