# Power Management {{{
# Hibernation

"sudo systemctl start suspend.target"
  m:0x40 + c:39
  Mod4 + s

"physlock"
  m:0x50 + c:46
  Mod2+Mod4 + l

"physlock"
  m:0x5 + c:46
  Control+Shift + l

"sudo systemctl start hibernate.target"
  m:0x40 + c:43
  Mod4 + h

"arandr"
  m:0x0 + c:179
  XF86Tools

"autorandr -c"
  m:0x0 + c:235
  XF86Display

"~/bin/tpadtoggle"
  m:0x0 + c:164
  XF86Favorites

# }}}
# Volume {{{
# Volume up
"amixer -D pulse set Master 5%+"
  m:0x0 + c:123
  XF86AudioRaiseVolume

# Volume down
"amixer -D pulse set Master 5%-"
  m:0x0 + c:122
  XF86AudioLowerVolume

# Volume Mute
"~/bin/mute"
  m:0x0 + c:121
  XF86AudioMute

# }}}
# Volume {{{

""
    m:0x0 + c:233
    XF86MonBrightnessUp
""
    m:0x0 + c:232
    XF86MonBrightnessDown

# }}}
# MPD management {{{
"mpc stop && mpc play"
  m:0x1 + c:111
  Shift + Up

"mpc prev"
  m:0x1 + c:113
  Shift + Left

"mpc prev"
  m:0x0 + c:173
  XF86AudioPrev

"mpc toggle"
  m:0x1 + c:116
  Shift + Down

"mpc toggle"
  m:0x0 + c:172
  XF86AudioPlay

"mpc next"
  m:0x1 + c:114
  Shift + Right

"mpc next"
  m:0x0 + c:171
  XF86AudioNext

"mpc stop"
  m:0x1 + c:135
  Shift + Menu

"mpc seek -5"
  m:0x10 + c:87

"mpc seek +5"
  m:0x10 + c:89

"mpc volume -5"
  m:0x10 + c:79"

"mpc volume +5"
  m:0x10 + c:81

"mpc random on && mpc next && mpc random off"
  m:0x1 + c:104
  Shift + KP_Enter

"mpc random"
  m:0x1 + c:68
  Shift + F2
# }}}
