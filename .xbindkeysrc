# Volume up
"amixer set "Master" 4+"
  m:0x0 + c:123
  XF86AudioRaiseVolume

# Volume down
"amixer set "Master" 4-"
  m:0x0 + c:122
  XF86AudioLowerVolume

# Volume Mute
"/home/sochan/bin/mute"
  m:0x0 + c:63
  XF86AudioMute

