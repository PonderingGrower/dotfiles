# Power Management {{{
# Hibernation
"slock"
 m:0x50 + c:46
 Mod2+Mod4 + l

"~/bin/windows"
 m:0x50 + c:27
 Mod2+Mod4 + r

"sudo /usr/sbin/hibernate"
 m:0x50 + c:43
 Mod2+Mod4 + h

"TPAD=$(synclient | awk '/TouchpadOff/{print $3}'); synclient TouchpadOff=$((TPAD==0))"
  m:0x0 + c:248
  NoSymbol

"autorandr -c"
    m:0x40 + c:38
    Mod4 + a

# }}}
# Volume {{{
# Volume up
"amixer set "Master" 4+"
  m:0x0 + c:123
  XF86AudioRaiseVolume

# Volume down
"amixer set "Master" 4-"
  m:0x0 + c:122
  XF86AudioLowerVolume

# Volume Mute
"/home/sochan/bin/mute"
  m:0x0 + c:63
  XF86AudioMute

# }}}
# MPD management {{{
"mpc stop && mpc play"
    m:0x1 + c:111
    Shift + Up

"mpc prev"
    m:0x1 + c:113
    Shift + Left

"mpc toggle"
    m:0x1 + c:116
    Shift + Down

"mpc next"
    m:0x1 + c:114
    Shift + Right

"mpc stop"
    m:0x1 + c:135
    Shift + Menu

"mpc seek -5"
  m:0x10 + c:87

"mpc seek +5"
  m:0x10 + c:89

"mpc volume -5"
  m:0x10 + c:79"

"mpc volume +5"
  m:0x10 + c:81

"mpc random on && mpc next && mpc random off"
    m:0x1 + c:104
    Shift + KP_Enter

"mpc random"
    m:0x1 + c:68
    Shift + F2
# }}}
