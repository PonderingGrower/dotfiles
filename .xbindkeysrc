# Power Management {{{
# Hibernation
"slock"
 m:0x50 + c:46
 Mod2+Mod4 + l

"~/bin/windows"
 m:0x50 + c:27
 Mod2+Mod4 + r

"sudo /usr/sbin/hibernate"
 m:0x50 + c:43
 Mod2+Mod4 + h

"TPAD=$(synclient | awk '/TouchpadOff/{print $3}'); synclient TouchpadOff=$((TPAD==0))"
  m:0x0 + c:248
  NoSymbol

"autorandr -c"
    m:0x40 + c:38
    Mod4 + a

# }}}
# Volume {{{
# Volume up
"amixer set "Master" 4+"
  m:0x0 + c:123
  XF86AudioRaiseVolume

# Volume down
"amixer set "Master" 4-"
  m:0x0 + c:122
  XF86AudioLowerVolume

# Volume Mute
"/home/sochan/bin/mute"
  m:0x0 + c:63
  XF86AudioMute

# }}}
# MPD management {{{
"mpc volume -5"
  m:0x10 + c:79"

"mpc stop && mpc play"
  m:0x10 + c:80

"mpc volume +5"
  m:0x10 + c:81

"mpc prev"
  m:0x10 + c:83

"mpc toggle"
  m:0x10 + c:84

"mpc next"
  m:0x10 + c:85

"mpc seek -5"
  m:0x10 + c:87

"mpc stop"
  m:0x10 + c:88

"mpc seek +5"
  m:0x10 + c:89

"mpc random on && mpc next && mpc random off"
  m:0x0 + c:86

"mpc random"
  m:0x0 + c:82
# }}}
